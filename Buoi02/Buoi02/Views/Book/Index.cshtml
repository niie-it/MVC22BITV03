@model List<Book>

<table class="table table-bordered">
	<tr>
		<th>ID</th>
		<th>Title</th>
		<th>Author</th>
		<th>Price</th>
		<th>Action</th>
	</tr>
	@foreach(var book in Model)
	{
		<tr>
			<td>@book.BookId</td>
			<td>@book.Title</td>
			<td>@book.Author</td>
			<td>@book.Price</td>
			<td>
				<a asp-action="Edit" asp-route-id="@book.BookId" class="btn btn-success">Sửa</a>
				<a asp-action="Delete" asp-route-id="@book.BookId" class="btn btn-danger">Xóa</a>
			</td>
		</tr>
	}
</table>