@model List<Lab07.Data.Product>
@{
    ViewData["Title"] = "Index";
}

<h1>Product list</h1>
<h3>Total @Model.Count product(s).</h3>
<table class="table table-bordered">
    <tr>
        <th>Hình</th>
        <th>Tên</th>
        <th>Giá</th>
        <th>Loại</th>
        <th>Nhà cung cấp</th>
        <th></th>
    </tr>
    @foreach(var item in Model)
    {
        <tr>
            <td>
                <img src="~/Images/Products/@item.Image" />
            </td>
            <td>@item.Name</td>
            <td>@item.UnitPrice</td>
            <td>@item.Category.NameVn</td>
            <td>@item.Supplier.Name</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Sửa</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Xóa</a>
            </td>
        </tr>
    }
</table>

